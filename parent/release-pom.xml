<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.example</groupId>
  <artifactId>parent</artifactId>
  <version>1.3</version>
  <packaging>pom</packaging>
  <description>The parent pom holds all the necessary
        version and configuration information for submodules.</description>
  <scm>
    <connection>scm:git:git@github.com:piyushpgupta/sample-maven-structure.git</connection>
    <tag>sample-maven-structure-1.2</tag>
    <url>https://github.com/piyushpgupta/sample-maven-structure.git</url>
  </scm>
  <distributionManagement>
    <repository>
      <id>nexus</id>
      <name>releaserepository</name>
      <url>http://localhost:8081/repository/releaserepository/</url>
    </repository>
    <snapshotRepository>
      <id>nexus</id>
      <name>snapshotrepository</name>
      <url>http://localhost:8081/repository/snapshotrepository/</url>
    </snapshotRepository>
  </distributionManagement>
  <properties>
    <commons.cli.version>1.0</commons.cli.version>
  </properties>
  <repositories>
    <repository>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
      <id>nexus</id>
      <name>grouprepository</name>
      <url>http://localhost:8081/repository/grouprepository/</url>
    </repository>
    <repository>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>central</id>
      <name>Central Repository</name>
      <url>https://repo.maven.apache.org/maven2</url>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <releases>
        <updatePolicy>never</updatePolicy>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>central</id>
      <name>Central Repository</name>
      <url>https://repo.maven.apache.org/maven2</url>
    </pluginRepository>
  </pluginRepositories>
  <build>
    <sourceDirectory>src/main/java</sourceDirectory>
    <scriptSourceDirectory>C:\sample-maven-structure\parent\src\main\scripts</scriptSourceDirectory>
    <testSourceDirectory>src/test/java</testSourceDirectory>
    <outputDirectory>target/classes</outputDirectory>
    <testOutputDirectory>target/test-classes</testOutputDirectory>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
    <testResources>
      <testResource>
        <directory>src/test/resources</directory>
      </testResource>
    </testResources>
    <directory>target</directory>
    <finalName>parent-1.3</finalName>
  </build>
  <reporting>
    <outputDirectory>target/site</outputDirectory>
  </reporting>
</project>
